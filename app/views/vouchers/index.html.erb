<div class="container d-flex flex-column align-items-center">
  <div class="voucher-index text-center">
    <h1>Gift Vouchers</h1>
    <% @vouchers.each do |voucher|%>
    <% if voucher.state == "paid" %>
    <div class="voucher-card d-flex align-items-center">
      <%= cl_image_tag voucher.treatment.subcategory.category.photo.key, width: 100, class: "mr-3"%>
      <div class="mr-5 voucher-card-text">
        <p><%= voucher.treatment.title%></p>
        <p>Purchased <%=voucher.created_at_formatted%></p>
      </div>
        <%= link_to "View Voucher", voucher_path(voucher.id), class: "waterlily-btn p-2", target: :_blank %>
    <% if current_user.admin? %>
      <p> Voucher Code: <%= voucher.voucher_code%></p>
      <%= link_to "Redeem", voucher_path(voucher.id), class: "" %>
      <% end %>
    </div>
    <% end %>
    <%end%>


  </div>
  </div>
