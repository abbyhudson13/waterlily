<div class="container">
    <p id="bulletin">Please note, due to the current government restrictions regarding Covid-19, we are currently closed. We hope to be back soon!</p>
    <div class="row" id="contact-page-content">
      <div class="col-sm-12 col-lg-6 contact-form p-0 container d-flex justify-content-center flex-column">
        <div class="contact-form-header d-flex justify-content-center align-items-center">
          <h2 class="mb-0 m-1">CONTACT US</h2>
        </div>
        <div class="contact-form-content">
          <%= simple_form_for @contact do |f| %>
          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.input :message, as: :text, :input_html => { class: 'test', :cols => 5, :rows => 20 } %>
          <%= f.label :nickname, class: "hidden" %> <br>
          <%= f.text_field :nickname, class: "hidden", hint: 'leave this field blank' %>
          <%= f.submit 'Send Message', class: "btn waterlily-btn" %>
          <% end %>
        </div>
      </div>
      <div class="col-sm-12 col-lg-6 contact-info">
        <div class="opening-times">
          <div id="opening-header">
            <h2>OPENING TIMES</h2>
          </div>
          <div class="opening-time-content mb-4">
            <h5>1st April- 30 September</h5>
            <p>Mon- Fri: 8:30am- 6:30pm</p>
            <p>Sat: 8:30am - 6pm</p>
            <p>Sun: 10am- 2pm  (May & June only)</p>
            <h5>1st October- 31st March</h5>
            <p>Mon- Fri: 8:30am- 6:30pm</p>
            <p>Sat: 8:30am - 6pm</p>
          </div>
        </div>
        <div id="map"
        style="width: 100%; height: 400px;"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
</div>
