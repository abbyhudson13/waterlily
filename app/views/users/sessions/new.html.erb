<div class="container d-flex flex-column align-items-center">
  <div class="sessions-form">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "waterlily-btn mb-3 py-2 px-3" %>
    </div>
    <% end %>
    <div class="d-flex flex-column align-items-start">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "wl-link-btn p-2 mb-3" %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), id: "forgot-password" %>
    </div>
  </div>
</div>
