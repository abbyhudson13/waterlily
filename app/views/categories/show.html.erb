<div class="container d-flex flex-column align-items-center wl-show">
  <div class="show-card">
    <h1 class="show-header"><%= @category.name %></h1>
    <%= cl_image_tag @category.photo.key, width: 300, height: 200, class: ""%>
    <hr/>
    <div class="show-description col-xl-8 col-md-8 col-sm-10">
      <%= @category.description %>
    </div>
  </div>
  <ul class="nav nav-pills mt-30" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link waterlily-pill-btn mr-3 active" id="pills-all-tab" data-toggle="pill" href="#pills-all" role="tab" aria-controls="pills-all" aria-selected="false">All Treatments</a>
    </li>
    <% if @category.subcategories.length > 1 %>
    <% @category.subcategories.each do |subcategory| %>
    <li class="nav-item">
      <a class="nav-link waterlily-pill-btn mr-3" id="pills-<%=subcategory.id %>-tab" data-toggle="pill" href="#pills-<%=subcategory.id %>" role="tab" aria-controls="pills-<%=subcategory.id%>" aria-selected="false"><%= subcategory.name %></a>
    </li>
    <%end%>
    <%end%>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
      <table class="wl-table">
        <thead>
          <th>Treatment</th>
          <th>Duration</th>
          <th>Price</th>
        </thead>
        <tbody>
          <% @category.treatments.each do |treatment|%>
          <tr>
            <% if !treatment.description == nil?%>
            <td><%= treatment.title%> <i class="fas fa-info-circle"></i> </td>
            <% else %>
            <td><%= treatment.title%></td>
              <% end %>
            <td class="time-td"><%= treatment.time%> minutes</td>
            <td>£<%= treatment.standard_price%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if @category.subcategories.length > 1 %>
    <% @category.subcategories.each do |subcategory| %>
    <div class="tab-pane fade show" id="pills-<%=subcategory.id %>" role="tabpanel" aria-labelledby="pills-<%=subcategory.id%>-tab">
      <table class="wl-table">
        <thead>
          <th>Treatment</th>
          <th>Duration</th>
          <th>Price</th>
        </thead>
        <tbody>
          <% subcategory.treatments.each do |treatment|%>
          <tr>
            <% if !treatment.description == nil?%>
            <td><%= treatment.title%> <i class="fas fa-info-circle"></i> </td>
            <% else %>
            <td><%= treatment.title%></td>
              <% end %>
            <td class="time-td"><%= treatment.time%> minutes</td>
            <td>£<%= treatment.standard_price%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%end%>
    <%end%>

  </div>
</div>
